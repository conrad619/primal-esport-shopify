
{{ 'custom-section-b.css' | asset_url | stylesheet_tag }}

<div class="custom-section-b">

  <div class="row">
    <div class="col first-column">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <h3>{{ section.settings.sub_heading }}</h3>
      <p>
        {{ section.settings.description }}
      </p>
      <a href="{{ section.settings.button_link }}" class="btn-a">{{ section.settings.button_text }}</a>
    </div>
    <div class="col second-column">
      <div class="bg-border">
        <div class="img-container">
          <div class="img-overlay"></div>
          <img src="{{ section.settings.image | image_url }}"/>
        </div>
        <div class="bottom-border">
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Section B",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub_heading",
        "label": "Sub Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Section B"
      }
    ]
  }
{% endschema %}
