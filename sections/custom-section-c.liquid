
{{ 'custom-section-c.css' | asset_url | stylesheet_tag }}

<div class="custom-section-c">
<!--   
  wrapper
    containenr
      heading
      button
  
  -->
  <div class="wrapper" style="background:url({{ section.settings.image | image_url }})">
    <div class="container">
      <h2>{{ section.settings.heading }}</h2>
      <a href="{{ section.settings.button_link }}">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Section C",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Section C"
      }
    ]
  }
{% endschema %}
