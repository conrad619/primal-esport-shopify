
{{ 'custom-section-b.css' | asset_url | stylesheet_tag }}

<div class="custom-section-b">

  <div class="row">

    
    <div class="col first-column">
      <div class="bg-border">
        <div class="img-container">
          <div class="img-overlay"></div>
          <img src="{{ section.settings.image | image_url }}"/>
        </div>
      </div>
    </div>
    
    <div class="col second-column">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <h3>{{ section.settings.sub_heading }}</h3>
      <p>
        {{ section.settings.description }}
      </p>
      <div class="bg-border-mobile"></div>
    </div>

    
  </div>
</div>

{% schema %}
  {
    "name": "Custom Section C",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Section C"
      }
    ]
  }
{% endschema %}
