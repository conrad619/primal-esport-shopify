
{{ 'custom-hero-banner.css' | asset_url | stylesheet_tag }}

<div class="custom-hero-banner">

  <div class="row">
    <div class="col first-column">
      <h2>
        {{ section.settings.heading }}
      </h2>
      <p>
        {{ section.settings.description }}
      </p>
      <h3>
        {{ section.settings.price }}
      </h3>
      <a href="{{ section.settings.button_link }}" class="btn btn-a">{{ section.settings.button_text }}</a>
    </div>
    <div class="col second-column">
      <div class="bg-box"></div>
      <div class="img-container">
        <img src="{{ section.settings.image | image_url }}"/>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Hero Banner",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Product Title"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "price",
        "label": "Price"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
      {
        "name": "Custom Hero Banner"
      }
    ]
  }
{% endschema %}
